<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".ui.Map.Map">

    <com.example.thewitcherwildhuntguidbook.ui.Map.MapView
        android:id="@+id/map_kaer_morhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        android:src="@drawable/map_kaer_morhen" />

    <com.example.thewitcherwildhuntguidbook.ui.Map.MapView
        android:id="@+id/map_white_orchard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        android:src="@drawable/map_white_orchard" />

    <com.example.thewitcherwildhuntguidbook.ui.Map.MapView
        android:id="@+id/map_novigrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        android:src="@drawable/map_novigrad" />

    <com.example.thewitcherwildhuntguidbook.ui.Map.MapView
        android:id="@+id/map_velen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/map_velen" />

    <Spinner
        android:id="@+id/spinner_map"
        android:layout_width="165dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_spinner"
        android:popupBackground="@drawable/bg_spinner"/>

    <ImageButton
        android:id="@+id/zoomInButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="320dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/item_plus"
        android:background="@drawable/bg_items"/>
    <ImageButton
        android:id="@+id/zoomOutButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="265dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/item_minus"
        android:background="@drawable/bg_items"/>
    <TextView
        android:id="@+id/scaleText"
        android:layout_width="50dp"
        android:layout_height="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_items"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="14dp"
        android:text="100%"
        android:textSize="8sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>